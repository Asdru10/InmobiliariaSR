@model List<ProyectoInmobilaria.Models.ViewModels.PropiedadVM>

<h2>Mis Favoritos</h2>

<div class="row">
    @foreach (var prop in Model)
    {
        <div class="col-md-4 d-flex">
            <div class="card mb-4 shadow-sm card-fixed w-100">
                <img src="@prop.UrlFoto" class="card-img-top" />
                <div class="card-body">
                    <div>
                        <h5 class="card-title">@prop.Propiedad.Titulo</h5>
                        <p class="card-text">@prop.Propiedad.Descripcion</p>
                    </div>
                    <a href="/Cliente/Propiedades/Details/@prop.Propiedad.Id" class="btn btn-primary btn-ver d-flex align-items-center justify-content-center gap-2 mt-3">
                        <i class="bi bi-eye"></i>
                        <span>Ver</span>
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<div class="text-center mt-4">
    <a asp-action="Index" class="btn btn-secondary px-5 py-2 d-flex align-items-center justify-content-center gap-2">
        <i class="bi bi-arrow-left-circle"></i>
        <span>Volver</span>
    </a>
</div>
